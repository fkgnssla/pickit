<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="지갑 생성 동의서"
        android:layout_gravity="center"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="약관내용\n\n\n\n\n"
        android:layout_margin="20dp"
        android:textSize="12dp"/>

    <!-- 아이디와 입력창을 가로로 배치 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디"
            android:textSize="16dp"
            android:width="80dp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/walletAgreeId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="현재 아이디를 입력하세요"
            android:inputType="text"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:textSize="16dp"
            android:background="@null"/>
    </LinearLayout>

    <!-- 지갑 번호와 텍스트를 가로로 배치 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지갑 번호"
            android:textSize="16dp"
            android:width="80dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/walletNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdfghj12345(자동생성)"
            android:textSize="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp" /> <!-- 체크박스에만 마진을 추가 -->

        <TextView
            android:id="@+id/checkBoxText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지갑 생성을 위해 위 약관에 동의합니다." />
    </LinearLayout>





</LinearLayout>