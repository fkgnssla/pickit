<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Solid color for the rectangle -->
    <solid android:color="#E0E0E0" />

    <!-- Optional: Add corner radius if you want rounded corners -->
    <corners android:radius="8dp" /> <!-- 모서리를 둥글게 설정 -->

    <!-- Optional: Add padding if needed -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Optional: Add border/stroke if needed -->
    <stroke
        android:width="2dp"
        android:color="#BDBDBD" /> <!-- 테두리 색상과 두께 설정 -->

</shape>
